{
  "private": true,
  "version": "2020.08.24",
  "author": "Name <id@mail.com>",
  "license": "MIT",
  "repository": "github:githubid/repository",
  "workspaces": [
    "source",
    "example",
    "out/packages/*",
    "out/rocket-scripts/*"
  ],
  "scripts": {
    "import": "TS_NODE_PROJECT=tsconfig.json node -r ts-node/register scripts/import.ts",
    "build": "yarn workspace source run build --out-dir $PWD/out/packages",
    "publish": "yarn run test && yarn run build && yarn workspace source run publish --out-dir $PWD/out/packages",
    "view": "yarn workspace source run view",
    "doctor": "yarn workspace source run doctor",
    "format": "prettier --write \"**/*.{js,ts,tsx}\"",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "test": "yarn workspace source run test",
    "coverage": "yarn workspace source run coverage --coverageDirectory $PWD/coverage",
    "example": "yarn workspace example run build"
  },
  "lint-staged": {
    "**/src/{**/*,*}.{ts,tsx}": [
      "prettier --write",
      "eslint"
    ]
  },
  "devDependencies": {
    "@ssen/eslint-config": "^1.1.0",
    "@ssen/prettier-config": "^1.0.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.13",
    "markdown-source-import": "^1.3.1",
    "prettier": "^2.1.1",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2"
  }
}
